<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00d0ff"
    tools:context="com.example.admin.quizmul.Songs_Question2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="30sp"
            android:textSize="50sp"
            android:textStyle="bold"
            android:text=" SONGS "
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="30sp"
            android:textSize="30sp"
            android:text="2. Hallelujah Nkateko"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/joy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Joyous Celebration"
            android:onClick="onClickjy"
            android:layout_marginLeft="24sp"
            android:layout_marginRight="24sp"/>
        <Button
            android:id="@+id/nw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Song"
            android:onClick="onClickns"
            android:layout_marginLeft="24sp"
            android:layout_marginRight="24sp"
            />

        <Button
            android:id="@+id/wor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="We will worship"
            android:onClick="onClickwr"
            android:layout_marginLeft="24sp"
            android:layout_marginRight="24sp"/>





    </LinearLayout>

    <Button
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="back"
        android:onClick="onClickbck"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="24sp"
        android:layout_marginRight="24sp"
        android:layout_marginBottom="23dp" />

</RelativeLayout>
